<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/userprofile_piltilbage"
        android:background="@drawable/arrowleft"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/UserProfileFragmentPilTilbage"/>

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:background="@drawable/av1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/userprofile_wordmin"
            android:text="@string/UserProfileFragmentWordMin"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/userprofile_wordminvalue"
            android:text="@string/UserProfileFragmentWordMinValue"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/userprofile_lix"
            android:text="@string/UserProfileFragmentLix"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/userprofile_lixvalue"
            android:text="@string/UserProfileFragmentLixValue"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/userprofile_achievement"
            android:background="@drawable/trophy"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/UserProfileFragmentAchievement"/>

        <ImageButton
            android:id="@+id/userprofile_stats"
            android:background="@drawable/chart"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/UserProfileFragmentStats"/>

    </LinearLayout>

</LinearLayout>