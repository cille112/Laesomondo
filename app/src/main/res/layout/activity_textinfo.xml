<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text=""
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textInfoName"
        android:padding="5dp"
        android:gravity="center"/>

    <Button
        android:text="@string/StartText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@color/colorComplimentary"
        android:textColor="@color/colorWhite"
        android:id="@+id/button3" />


    <TextView
        android:text=""
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textInfo"
        android:padding="5dp"
        android:layout_below="@+id/textInfoName"
        android:layout_toEndOf="@+id/textCover" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="152.5dp"
        android:id="@+id/textCover"
        android:layout_alignTop="@+id/textInfo"
        android:layout_alignParentStart="true"
        android:padding="5dp"/>


</RelativeLayout>