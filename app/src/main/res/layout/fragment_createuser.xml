<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/CreateUserFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/createuser_name"
        android:hint="@string/CreateUserFragmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/createuser_age"
        android:hint="@string/CreateUserFragmentAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/createuser_picture"
        android:text="@string/CreateUserFragmentPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/createuser_picturebtn"
            android:background="@drawable/av1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:contentDescription="@string/CreateUserFragmentAvatar"/>

        </LinearLayout>

</LinearLayout>