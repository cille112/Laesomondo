<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/logo"/>

    <EditText
        android:id="@+id/createuser_name"
        android:hint="@string/CreateUserFragmentName"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <EditText
        android:id="@+id/createuser_age"
        android:hint="@string/CreateUserFragmentAge"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="date" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">

    <TextView
        android:id="@+id/createuser_picture"
        android:text="@string/CreateUserFragmentPicture"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/createuser_picturebtn"
            android:background="@drawable/av1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:contentDescription="@string/CreateUserFragmentAvatar"/>

        </LinearLayout>


</LinearLayout>