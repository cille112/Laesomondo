<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:contentDescription="@string/app_name"/>

    <com.example.cille_000.laesomondo.util.NoPopupEditText
        android:id="@+id/createuser_name"
        android:hint="@string/CreateUserFragmentName"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <com.example.cille_000.laesomondo.util.NoPopupEditText
        android:id="@+id/createuser_password"
        android:hint="@string/LoginFragmentPassword"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <com.example.cille_000.laesomondo.util.NoPopupEditText
        android:id="@+id/createuser_age"
        android:hint="@string/CreateUserFragmentAge"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="date" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp">

    <TextView
        android:id="@+id/createuser_picture"
        android:text="@string/CreateUserFragmentPicture"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/createuser_picturebtn"
            android:background="@drawable/av1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:contentDescription="@string/CreateUserFragmentAvatar"/>

        </LinearLayout>

    <TextView
        android:id="@+id/createuser_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/CreateUserFragmentLogin"
        android:clickable="true"/>


</LinearLayout>