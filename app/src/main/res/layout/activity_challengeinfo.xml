<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_challengeinfo">

        <TextView
            android:text="@string/ChallengeInfoFragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/challengeinfo_button"
            android:text="@string/ChallengeInfoFragmentButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorComplimentary"/>

        <TextView
            android:id="@+id/challengeinfo_later"
            android:text="@string/ChallengeInfoFragmentNotNow"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"/>


</LinearLayout>